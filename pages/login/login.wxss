/* pages/login/login.wxss */

button {
  margin-bottom: 20px;
}


.container{
  height: 100vh;
  background-color: #ffffff;
}

/* 用户授权页 */

.login-shop{
  margin: auto;
}
.login-img{
  display: block;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto 10rpx auto;
}
.login-text{
  text-align: center;
  color: #333333;
  margin-bottom: 520rpx;
}
.login-button{
  width: 640rpx;
  height: 80rpx;
  margin: 0 auto;
  font-size:32rpx;
  text-align: center;
  line-height: 80rpx;
  color: #ffffff;
  background-color: #07C160;
}
.login-button.login-close{
  margin-top: 50rpx;
  background-color: #ff5151;
  border-radius: 12rpx;
}

/* 绑定手机号码 */
.bind-phone{
  padding: 80rpx 50rpx 0 50rpx;
}
.bind-phone-title{
  font-size: 40rpx;
  font-weight: 600;
  padding-bottom: 80rpx;
}
.bind-phone-input{
  height: 100rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.bind-phone-input input{
  font-size:30rpx;
  height: 100%;
}
.bind-phone-verification{
  position: relative;
}
.bind-phone-verification > text {
  display: inline-block;
  position: absolute;
  height: 100rpx;
  color: #33AAFF;
  font-size: 26rpx;
  line-height: 100rpx;
  right: 0;
  top:0;
  z-index: 999;
}
.bind-phone-rule{
  display: flex;
  align-items: center;
  padding: 10rpx 0 60rpx 0;
  color: #666666;
  font-size: 26rpx;
}
.bind-phone-rule icon{
  padding:20rpx 20rpx 20rpx 0;
}
.bind-phone-rule text{
  color: #33AAFF;
  padding: 0 10rpx;
}
.bind-phone-button{
  height: 80rpx;
  border-radius: 40rpx;
  line-height: 80rpx;
  font-size:32rpx;
  color: #ffffff;
  background:linear-gradient(90deg,rgba(255,102,0,1) 0%,rgba(237,0,0,1) 100%);
}
.bind-phone-button.dis-button{
  background: #DDDDDD;
}